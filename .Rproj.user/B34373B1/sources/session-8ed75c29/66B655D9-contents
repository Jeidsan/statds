  ggplot(aes(x = htransp)) +
    stat_boxplot(geom = "errorbar", width = 0.2) +
    geom_boxplot(
      fill = "grey", 
      color = "grey30"
    ) +
    labs(
      title = "Figura 3.28: Distribuição da variável `htransp`"
